@model IEnumerable<online.Product>

@{
    ViewBag.Title = "DisplayArt";
}

<h2>DisplayArt</h2>

<div>
    <h4>Product</h4>
    <hr />
<div class="row">
    @foreach (var item in Model)
    {
       
 double price = Convert.ToInt32(item.BidAmount);
            <div style="margin-bottom:30px" class="col-sm-3">
               
                    <div style="margin-bottom:20px">
                        <img src="@Url.Content(item.Images)" height="350" width="250" />
                    </div>
                    <div class="caption">
                        <h3>
                            @*<a href="#">@item.ProductName</a>*@
                            <a href="~/products/Details/@item.ImageId" class="btn btn-default">Exploere</a>
                        </h3>
                        <h4>@price.ToString("F2")$</h4>
                    </div>
               
            </div>
            }
        </div>
</div>
    
<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |*@
    @Html.ActionLink("Back to List", "Index")
</p>
